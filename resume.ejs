<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Resume PDF</title>
  <style>
    body {
      font-family: sans-serif;
      padding: 40px;
      background: #f3f4f6;
    }
    .container {
      background: #fff;
      padding: 30px;
      border-radius: 8px;
      max-width: 800px;
      margin: auto;
    }
    h2 {
      margin-bottom: 10px;
      color: #1f2937;
    }
    h3 {
      color: #2563eb;
      margin-top: 20px;
      margin-bottom: 8px;
    }
    p {
      margin: 4px 0;
      color: #374151;
    }
    ul {
      list-style-type: disc;
      margin-left: 20px;
      color: #374151;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2><%= name %></h2>
    <p><%= email %> | <%= phone %> | <%= linkedin %></p>

    <h3>Summary</h3>
    <p><%= summary %></p>

    <h3>Education</h3>
    <p><%= education %></p>

    <h3>Skills</h3>
    <ul>
      <% skills.split(",").forEach(function(skill) { %>
        <li><%= skill.trim() %></li>
      <% }) %>
    </ul>
  </div>
</body>
</html>

